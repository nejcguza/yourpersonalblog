<h1>Welcome to YourPersonalBlog</h1>

<% @posts.each do |post| %>
  <h2><%= link_to post.title, post %></h2>

  <div style="color:#BC3CBC">
  <p><%= truncate post.user.email %></p>
</div>

  <p>
    <%= time_ago_in_words post.created_at %> ago
  </p>


  <p>
    <%= truncate post.text %>
 </p>  
 
<% end %>
<p>
  <%= link_to "New post", new_post_path %>
</p>


